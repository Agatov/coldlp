legend
  | Заявки


table.table
  thead
    tr
      th Название салона
      th Сайт
      th Email
      th Дата
      th

  tbody
    - @orders.each do |order|
      tr
        td
          = link_to order.contact.name, admin_contact_path(order.contact)
        td
          a (href = order.contact.url) = order.contact.url
        td = order.email
        td = order.created_at.strftime "%Y-%m-%d %H:%M"
        td
          = link_to "Удалить", admin_order_path(order), method: :delete